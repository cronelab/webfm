{
	"exclude": [
		"./migration",
		"./server",
		// "node_modules",
		"dist",
	],
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"allowJs": true,
		"sourceMap": true,
		"strictNullChecks": false,
		"downlevelIteration": true,
		"jsx": "react",
		"typeRoots": [
			"node_modules/@types"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"node_modules/react-bootstrap/index.d.ts"
	],
}